{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>InstagramId</th>
                <td>{{ user.instagramId }}</td>
            </tr>
            <tr>
                <th>FollowedOn</th>
                <td>{{ user.followedOn ? user.followedOn|date('Y-m-d H:i:s') : '' }}</td>
